// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "width": 1280, // Waybar width
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "custom/music"
    ],
    "modules-center": [
        "custom/date-central",
        "custom/date",
        "custom/date-pacific"
    ],
    "modules-right": [
        "custom/weather",
        "cpu",
        "memory",
        "temperature",
        "network",
        "pulseaudio",
        "custom/wireguard-manager",
        "tray",
        "idle_inhibitor",
        "custom/lock",
    ],
    "hyprland/workspaces": {
        "disable-scroll": true,
        "sort-by-name": true,
        "active-only": false,
        "persistent-workspaces": {
            "DP-3": [
                1,
                2,
                3,
                4,
                5
            ],
            "DP-1": [
                6
            ],
            "HDMI-A-1": [
                7
            ]
        },
        "format": " {name}:{icon} ",
        "format-icons": {
            "default": "ÓÆ¥",
            "1": "Web",
            "2": "Code",
            "3": "Notes",
            "4": "Games",
            "5": "Misc",
            "6": "Secondary",
            "7": "Aux"
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "hyprland/window": {
        "separate-outputs": true
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },
    "cpu": {
        "interval": 1,
        "format": "{usage}% Ôãõ ",
        "tooltip": false
    },
    "memory": {
        "interval": 1,
        "format": "{}% ÔÉâ "
    },
    "network": {
        "interval": 1,
        "format": "{bandwidthDownBytes} Û∞õ≥ "
    },
    "temperature": {
        "interval": 1,
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": [
            "Ôãä",
            "Ôãâ",
            "Ôãá"
        ]
    },
    "custom/music": {
        "format": "ÔÄÅ  {}",
        "escape": true,
        "interval": 1,
        "tooltip": true,
        "exec": "/run/current-system/sw/bin/playerctl metadata --format='{{ artist }}|{{ title }}'",
        "on-click": "/run/current-system/sw/bin/playerctl play-pause",
        "max-length": 50
    },
    "clock": {
        "interval": 1,
        "timezone": "Asia/Dubai",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "Ôó¨ {:%d/%m/%Y}",
        "format": "Ôôè {:%H:%M}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon} {volume}%",
        "format-muted": "Ôë¶",
        "format-icons": {
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ® "
            ]
        },
        "on-click": "pavucontrol"
    },
    "custom/date-central": {
        "interval": 1,
        "exec": "date '+%l:%M %p %Z'"
    },
    "custom/date-pacific": {
        "interval": 1,
        "exec": "TZ='US/Pacific' date '+%l:%M %p %Z'"
    },
    "custom/date": {
        "interval": 1,
        "exec": "date '+%A %B %e %Y'"
    },
    "custom/lock": {
        "tooltip": false,
        "on-click": "/run/current-system/sw/bin/hyprlock",
        "format": "ÔÄ£"
    },
    "custom/weather": {
        "format": "{}¬∞",
        "tooltip": true,
        "interval": 3600,
        "exec": "wttrbar --fahrenheit --location 72032",
        "return-type": "json"
    },
    "custom/wireguard-manager": {
        "interval": 3,
        "return-type": "json",
        "format-icons": {
            "connected": "<span color=\"#50fa7b\">VPN: üîí</span>",
            "disconnected": "<span color=\"#ff5555\">VPN: üîì</span>"
        },
        "on-click": "exec ~/.config/waybar/wireguard-manager/wireguard-manager.sh -t",
        "exec": "exec ~/.config/waybar/wireguard-manager/wireguard-manager.sh -s",
        "format": "{icon}"
    }
}
